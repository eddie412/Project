<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shopMapper">
	

	
	<!-- 장바구니 상품 합계 -->
	<select id="total"  resultType="int">
		SELECT		NVL(SUM(pPrice * count), 0) money
		FROM			tr_pro p, tr_cart c
		WHERE		p.pNo = c.pNo
		AND			c.userId = #{userId}
	</select>
	
	<!-- 장바구니_상품삭제 -->
	<delete id="delete" >
		DELETE FROM tr_cart
		WHERE cId = #{cId}
	</delete>
	
	<!-- 장바구니 상품 전체삭제 -->
	<delete id="deleteAll">
		DELETE FROM tr_cart
		WHERE userId = #{userId}
	</delete>
	

</mapper>